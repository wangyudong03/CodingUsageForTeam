{
  "name": "coding-usage",
  "displayName": "Coding Usage",
  "description": "Share Cursor/Trae usage statistics with your team",
  "version": "1.1.4",
  "publisher": "whyuds",
  "repository": {
    "type": "git",
    "url": "https://github.com/lasoons/CodingUsage.git"
  },
  "license": "MIT",
  "engines": {
    "vscode": "^1.74.0"
  },
  "categories": [
    "Other"
  ],
  "icon": "logo_256.png",
  "activationEvents": [
    "onStartupFinished"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "cursorUsage.refresh",
        "title": "Coding Usage: Refresh",
        "icon": "$(refresh)"
      },
      {
        "command": "cursorUsage.updateSession",
        "title": "Coding Usage: Update Session Token",
        "icon": "$(settings-gear)"
      },
      {
        "command": "cursorUsage.showOutput",
        "title": "Coding Usage: Show Output",
        "icon": "$(output)"
      },
      {
        "command": "cursorUsage.copyApiKey",
        "title": "Coding Usage: Copy Client API Key",
        "icon": "$(copy)"
      }
    ],
    "configuration": {
      "title": "Coding Usage",
      "properties": {
        "cursorUsage.additionalSessionTokens": {
          "type": "array",
          "items": {
            "type": "string",
            "editPresentation": "multilineText"
          },
          "default": [],
          "maxItems": 3,
          "markdownDescription": "Additional session tokens for secondary accounts (max 3). Only displays usage, no data submission to team server.\n\n**Note**: Tokens are long strings. For better editing, use `settings.json` directly."
        },
        "cursorUsage.teamServerUrl": {
          "type": "string",
          "default": "",
          "description": "Team server base URL for usage reporting"
        },
        "cursorUsage.clientApiKey": {
          "type": "string",
          "default": "",
          "description": "Auto-generated client API key (based on app name and account). Automatically updates when account changes.",
          "readOnly": true
        },
        "cursorUsage.enableReporting": {
          "type": "boolean",
          "default": false,
          "description": "Enable reporting usage data to team server (default: disabled)"
        }
      }
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run package",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "npm run compile && npm run lint",
    "lint": "eslint src --ext ts",
    "test": "node ./out/test/runTest.js",
    "package": "node esbuild.js"
  },
  "devDependencies": {
    "@types/fs-extra": "^11.0.4",
    "@types/node": "16.x",
    "@types/sql.js": "^1.4.9",
    "@types/vscode": "^1.74.0",
    "@typescript-eslint/eslint-plugin": "^5.45.0",
    "@typescript-eslint/parser": "^5.45.0",
    "esbuild": "^0.19.0",
    "esbuild-plugin-copy": "^2.1.1",
    "eslint": "^8.28.0",
    "typescript": "^4.9.4"
  },
  "dependencies": {
    "axios": "^1.6.0",
    "fs-extra": "^11.1.1",
    "sql.js": "^1.9.0"
  }
}